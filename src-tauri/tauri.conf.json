{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Capture Video Visualizer",
  "version": "0.1.0",
  "identifier": "com.leoni.capture-video-visualizer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "capture-video-visualizer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "permissions": [
      {
        "identifier": "core:allow-all",
        "allow": [
          { "name": "core:window:allow-create" },
          { "name": "core:window:allow-center" },
          { "name": "core:window:allow-request-user-attention" }
        ]
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
